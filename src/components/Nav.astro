---
import Link from "./Link.astro";

interface Props {
  nvim: string;
}
const { nvim } = Astro.props;
---

<div class="flex max-w-xl flex-col gap-1 px-4 pb-6 pt-8 tracking-tight md:px-8 md:pb-10 md:pt-12 break-all">
  <div class="flex flex-col pb-1">
    <div aria-hidden="true" class="font-semibold">λ ~/ ls</div>
    <nav
      class="flex flex-wrap gap-x-4 gap-y-1"
    >
      <Link href="/">index.astro</Link>
      <Link href="/notes/">notes/</Link>
    </nav>
  </div>
  <div aria-hidden="true" class="font-semibold">λ ~/ nvim {nvim}</div>
</div>
