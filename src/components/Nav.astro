---
import Link from "./Link.astro";
interface Props {
  nvim: string;
}
const { nvim } = Astro.props;
---

<div class="flex max-w-xl flex-col gap-1 px-4 pb-6 pt-8 tracking-tight md:px-8 md:pb-10 md:pt-12">
  <div class="flex flex-col pb-1">
    <div aria-hidden="true" class="font-semibold">λ ~/ ls</div>
    <nav
      class="grid grid-flow-row grid-cols-[repeat(auto-fit,minmax(6rem,1fr))] justify-items-start gap-x-3 gap-y-1"
    >
      <Link href="/">index.astro</Link>
      <Link href="/notes/">notes/</Link>
      <Link
        href="https://docs.google.com/document/d/1NLnoy3xBnbqhvsBtGGYP3d7JllKwhDJMDowuvUhlV4U/export?format=pdf"
        target="_blank"
        rel="noopener noreferrer"
      >
        resume.pdf
      </Link>
    </nav>
  </div>
  <div aria-hidden="true" class="font-semibold">λ ~/ nvim {nvim}</div>
</div>
